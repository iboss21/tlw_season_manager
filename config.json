{
  "seasonManager": {
    "version": "1.0.0",
    "name": "Season Manager - 12 Stage Dynamic Weather and Climate Overhaul",
    
    "features": {
      "enableSeasonalCycle": true,
      "enableDynamicWeather": true,
      "enableTemperatureSystem": true,
      "enableClimateOverhaul": true
    },
    
    "seasonSettings": {
      "daysPerStage": 10,
      "cycleLength": 120,
      "startingStage": 1,
      "comment": "Each of the 12 stages lasts 10 in-game days, for a total cycle of 120 days"
    },
    
    "weatherSettings": {
      "transitionSpeed": 0.5,
      "weatherChangeInterval": 3600,
      "allowExtremeLweather": true,
      "comment": "transitionSpeed: 0.0-1.0, weatherChangeInterval in seconds"
    },
    
    "temperatureSettings": {
      "transitionSpeed": 0.3,
      "useRealistics": true,
      "temperatureScale": "celsius",
      "timeOfDayVariation": 8,
      "comment": "timeOfDayVariation: temperature swing between day and night in degrees"
    },
    
    "climateZones": {
      "northern": {
        "enabled": true,
        "temperatureModifier": -8,
        "snowModifier": 0.3,
        "windModifier": 0.2
      },
      "central": {
        "enabled": true,
        "temperatureModifier": 0,
        "snowModifier": 0.0,
        "windModifier": 0.1
      },
      "southern": {
        "enabled": true,
        "temperatureModifier": 5,
        "snowModifier": -0.3,
        "windModifier": -0.1
      },
      "desert": {
        "enabled": true,
        "temperatureModifier": 10,
        "snowModifier": -0.5,
        "windModifier": 0.15
      },
      "coastal": {
        "enabled": true,
        "temperatureModifier": 2,
        "snowModifier": -0.2,
        "windModifier": 0.3
      }
    },
    
    "debugSettings": {
      "enableLogging": false,
      "showStageInfo": false,
      "logWeatherChanges": false,
      "displayTemperature": false
    }
  }
}
